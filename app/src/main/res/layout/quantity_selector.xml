<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/results_list_quantity_selector"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="15dp">
    <ImageView
        android:id="@+id/minus_quantity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/minis_icon"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/minus_icon"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/results_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:text="@string/default_quantity"/>
    <ImageView
        android:id="@+id/add_quantity"
        android:layout_marginStart="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/plus_icon"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/plus_icon" />

</LinearLayout>